/* Sound Wave Animation */
.sound-wave-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.sound-wave {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: calc(1px + var(--audio-level, 0) * 1px) solid rgba(244, 67, 54, 0.6);
  border-radius: 50%;
  opacity: var(--wave-intensity, 0);
  animation: soundWavePulse 1.8s infinite ease-out;
  filter: blur(calc(2px - var(--audio-level, 0) * 0.3px));
}

.sound-wave-1 {
  width: calc(60px + var(--audio-level, 0) * 10px);
  height: calc(60px + var(--audio-level, 0) * 10px);
  animation-delay: 0s;
  animation-duration: calc(1.8s - var(--audio-level, 0) * 0.2s);
}

.sound-wave-2 {
  width: calc(75px + var(--audio-level, 0) * 12px);
  height: calc(75px + var(--audio-level, 0) * 12px);
  animation-delay: 0.2s;
  animation-duration: calc(1.9s - var(--audio-level, 0) * 0.2s);
}

.sound-wave-3 {
  width: calc(90px + var(--audio-level, 0) * 15px);
  height: calc(90px + var(--audio-level, 0) * 15px);
  animation-delay: 0.4s;
  animation-duration: calc(2.0s - var(--audio-level, 0) * 0.2s);
}

.sound-wave-4 {
  width: calc(105px + var(--audio-level, 0) * 18px);
  height: calc(105px + var(--audio-level, 0) * 18px);
  animation-delay: 0.6s;
  animation-duration: calc(2.1s - var(--audio-level, 0) * 0.2s);
}

.sound-wave-5 {
  width: calc(120px + var(--audio-level, 0) * 20px);
  height: calc(120px + var(--audio-level, 0) * 20px);
  animation-delay: 0.8s;
  animation-duration: calc(2.2s - var(--audio-level, 0) * 0.2s);
}

@keyframes soundWavePulse {
  0% {
    transform: translate(-50%, -50%) scale(0.9);
    opacity: calc(var(--wave-intensity, 0) * 0.4);
  }
  40% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: calc(var(--wave-intensity, 0) * 0.25);
  }
  70% {
    transform: translate(-50%, -50%) scale(1.3);
    opacity: calc(var(--wave-intensity, 0) * 0.1);
  }
  100% {
    transform: translate(-50%, -50%) scale(1.5);
    opacity: 0;
  }
}


